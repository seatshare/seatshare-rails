<% content_for :page_title do %>Create a Group<% end %>

<%= form_for @group, url: new_group_path, html: {class: "form-horizontal", role: "form"} do |f| %>

<fieldset>
  <legend>Create a Season Ticket Group</legend>

  <p class="lead">A ticket group exchanges tickets among its membership. You can assign tickets to other users, or request their available tickets.</p> 

  <hr />

  <ol class="user-steps">
    <li>
      <h3>Pick a team</h3>
      <p class="lead">This is how we will organize your tickets.</p>
      <div class="well">
        <%= f.label :entity, 'Your Team', :class => 'sr-only control-label'  %>
        <div>
          <% if @entity %>
          <p class="form-control-static"><%= @entity.display_name %></p>
          <%= f.hidden_field :entity_id, :value => @entity.id %>
          <% else %>
          <%= select_tag 'group[entity_id]', grouped_options_for_select(@entities), { :class => 'form-control', :prompt => '' } %>
          <p class="help-block"><strong>Choose carefully!</strong> You cannot change your team after the group is created.</p>
          <% end %>
        </div>
      </div>
    </li>
    <li>
      <h3>Invite your friends!</h3>
      <p class="lead">You will be able to to send group invitations on the next screen.</p>
    </li>
  </ol>
</fieldset>

<hr />

<div class="row">
  <div class="text-right col-md-12">
    <%= f.submit 'Create Group', :class => 'btn btn-primary' %>
  </div>
</div>

<br />

<% end %>

<% content_for :sidebar do %>
<div class="alert alert-info">
  <h4>I have an invitation code</h4>
  <p>If you received an invitation to join an existing group, <%= link_to 'enter your invitation code', groups_join_path %>.</p>
</div>

<div class="alert alert-info">
  <h4>Can I browse for public groups?</h4>
  <p>SeatShare does not yet have "open" ticket groups. Create a group and invite your friends to get started.</p>
</div>
<% end %>

<% content_for :page_footer do %>
<% end %>
