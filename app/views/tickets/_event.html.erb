<div class="panel panel-default">
  <div class="panel-heading">
    <div class="pull-right">
        <%= link_to raw('<span class="fa fa-download"></span> Export Event'), { controller: 'events', action: 'show', group_id: @group.id, id: @event.id, format: 'ics' }, class: 'btn btn-default btn-xs hidden-xs' %>
    </div>
    <span class="fa fa-calendar"></span> <span class="event_date_time"><%= @event.date_time %></span>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-7">
        <h3><%= link_to @event.event_name, :controller => 'events', :action => 'show', :group_id => @group.id, :id => @event.id %></h3>
        <%= raw(@event.description_md) %>
        <% if @ticket && (@ticket.section || @ticket.row || @ticket.seat) %>
        <ul class="list-inline">
          <li><strong>Section</strong> <%= @ticket.section %></li>
          <li><strong>Row</strong> <%= @ticket.row %></li>
          <li><strong>Seat</strong> <%= @ticket.seat %></li>
        </ul>
        <% end %>
      </div>
      <div class="col-md-5">
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" style="width:<%= @ticket_stats[:percent_full] %>%"></div>
        </div>
        <ul class="list-unstyled">
          <li class="available-ticket-count"><span class="badge"><%= @ticket_stats[:available] %></span> available in the group</li>
          <li class="total-ticket-count"><span class="badge"><%= @ticket_stats[:total] %></span> total in the group</li>
          <li class="held-ticket-count"><span class="badge"><%= @ticket_stats[:held] %></span> held by you</li>
        </ul>
      </div>
    </div>

    <% if @seatgeek_data %>
    <hr />
    <div class="row">
      <div class="col-md-12">
        <ul class="list-inline">
          <li class="data-credit text-muted text-right"><%= link_to image_tag('seatgeek.svg', :class => '', :alt => "SeatGeek", :title => "SeatGeek Logo"), @seatgeek_data['url'], :target => '_blank' %></li>
          <li><%= link_to "#{@seatgeek_data['stats']['listing_count'] || 0} Listings", @seatgeek_data['url'], class: 'btn btn-sm btn-info', target: '_blank' %></li>
          <li><strong>Average Price:</strong> <%= number_to_currency(@seatgeek_data['stats']['average_price']) || 'N/A' %></li>
          <li><strong>Lowest Price (Good Deals):</strong> <%= number_to_currency(@seatgeek_data['stats']['lowest_price_good_deals']) || 'N/A' %></li>
          <li><strong>Lowest Price:</strong> <%= number_to_currency(@seatgeek_data['stats']['lowest_price']) || 'N/A' %></li>
          <li><strong>Highest Price:</strong> <%= number_to_currency(@seatgeek_data['stats']['highest_price']) || 'N/A' %></li>
        </ul>
      </div>
    </div>
    <% end %>

  </div>
</div>
