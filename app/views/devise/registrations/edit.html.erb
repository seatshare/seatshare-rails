<% content_for :page_title do %>Edit Your Login<% end %>

<%= form_for(resource, html: {class: "form-horizontal", role: "form", method: :put}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>Your Login</legend>

    <div class="form-group">
      <%= f.label :email, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.email_field :email, :class => 'form-control', :placeholder => 'johndoe@example.com' %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="help-block">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %>
        <p class="help-block">We need your current password to confirm your changes.</p>
      </div>
    </div>

    <hr />

    <div class="form-group">
      <%= f.label :password, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
        <p class="help-block">Leave blank if you don't want to change it.</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
      </div>
    </div>

  </fieldset>

  <div class="row">
    <div class="col-md-12">
        <p class="text-right">
          <%= f.submit 'Update Login', :class => 'btn btn-primary' %>
        </p>
    </div>
  </div>

<% end %>

<% content_for :page_footer do %>
<% end %>
