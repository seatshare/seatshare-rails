<% content_for :page_title do %>SeatShare :: Sign In<% end %>

<%= form_for(resource, html: {class: "form-signin", role: "form"}, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div>
    <%= f.email_field :email, autofocus: true, :class => 'form-control input-lg', :placeholder => 'Email address', :autocapitalize => 'off', :autocorrect => 'off' %>
  </div>
  <div class="input-group">
    <%= f.password_field :password, autocomplete: 'off', :class => 'form-control input-lg', :placeholder => 'Password', :autocapitalize => 'off', :autocorrect => 'off' %>
    <span class="input-group-addon">
      <a class="toggle-password" title="Show/hide password" data-toggle="tooltip"><span class="fa fa-lock"></span></a>
    </span>
  </div>

  <br />

  <% if devise_mapping.rememberable? -%>
  <div class="row">
    <div class="col-xs-7 text-left">
      <p class="form-control-static input-lg">
        <small><%= f.check_box :remember_me %> <%= f.label :remember_me %></small>
      </p>
    </div>
    <div class="col-xs-5 text-right">
      <%= f.submit "Sign In", :class => 'btn btn-lg btn-primary' %>
    </div>
  </div>
  <% end -%>

  <br />

  <div class="help-block">
    <p class="text-center">
      <%= link_to "I forgot my password", new_password_path(resource_name) %>
    </p>
  </div>

  <br />

  <div class="alert alert-info">
    <p>
      Need to <%= link_to 'register for an account',  new_user_registration_path, :class => 'alert-link' %>?
    </p>
  </div>



<% end %>

<% content_for :page_footer do %>
<script>if (typeof mixpanel != 'undefined') { mixpanel.track("View login"); }</script>
<% end %>