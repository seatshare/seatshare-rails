<% content_for :page_title do %>SeatShare :: Reset Your Password<% end %>

<%= form_for(resource, html: {class: "form-signin", role: "form", method: :post}, as: resource_name, url: password_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.email_field :email, autofocus: true, :class => 'form-control input-lg', :placeholder => 'Email address' %>
  <br />
  <%= f.submit "Retrieve Password", :class => 'btn btn-lg btn-primary btn-block' %>

  <br />

  <div class="alert alert-info">
    <p>
      Need to <%= link_to 'register for an account', new_user_registration_path, class: 'alert-link', title: 'Create Account' %>?
    </p>
  </div>

<% end %>

<% content_for :page_footer do %>
<% end %>
